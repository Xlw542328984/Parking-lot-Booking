<view class="container">
  <view class="login-container">
    <view class="login-box">
      <form action="post" bindsubmit="formSubmit">
        <label>手机号码</label>
        <input type="text" name="username" model:value="{{username}}" bindinput='blurPhone' bindtap="empty"/>
        <label>旧密码</label>
        <input type="password" name="password" model:value="{{password}}" bindinput="empty"/>
        <label>新密码</label>
        <input type="password" name="newpassword" model:value="{{newpassword}}" bindinput="empty"/>
        <label>重复密码</label>
        <input type="password" name="renewpassword" model:value="{{renewpassword}}" bindinput="empty"/>
        <button class="login-btn" form-type="submit">设置新密码</button>
      </form>
    </view>
  </view>
</view>